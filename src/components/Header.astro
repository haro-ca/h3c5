---
import HeaderLink from './HeaderLink.astro';
import { ImTwitter } from 'react-icons/im/index.js'
import ThemeToggle from './ThemeToggleButton';
---

<header class="fixed w-full pq2 z-20 backdrop-blur-md">
  <div class="mx-auto max-w-3xl">
    <nav class="flex items-center gap-3">
      <a href="/" class="group">
        <h2 class="font-semibold tracking-tighter p-5 font-mplus text-lg md:flex">
          H3C5 - Carlos Alberto Haro
        </h2>
      </a>
      <div class="items-center gap-6 hidden md:flex">
        <HeaderLink href="/">Home</HeaderLink>
        <HeaderLink href="/blog">Blog</HeaderLink>
        <HeaderLink href="/about">About</HeaderLink>
        <HeaderLink href="https://twitter.com/haro_ca_" target="_blank"><ImTwitter />Twitter</HeaderLink>
      </div>
        <div class="flex-1"></div>
      <ThemeToggle client:load/>
    </nav>
  </div>
</header>
